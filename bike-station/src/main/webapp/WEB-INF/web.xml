<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>bike-station</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<display-name>BikeStart</display-name>
		<servlet-name>BikeStart</servlet-name>
		<servlet-class>by.epam.bikerent.controller.BikeStart</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BikeStart</servlet-name>
		<url-pattern>/bikes</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<description>MySQL DB Connection Pool</description>
		<res-ref-name>jdbc/bike-station</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<listener>
		<listener-class>by.epam.bikerent.listener.SessionListener</listener-class>
	</listener>
	<listener>
		<listener-class>by.epam.bikerent.listener.SessionAttributeListener</listener-class>
	</listener>
	<filter>
		<filter-name>encodingfilter</filter-name>
		<filter-class>by.epam.bikerent.filters.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingfilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>servletsecurity</filter-name>
		<filter-class>by.epam.bikerent.filters.ServletSecurityFilter</filter-class>
		<init-param>
			<param-name>servletName</param-name>
			<param-value>BikeStart</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>servletsecurity</filter-name>
		<url-pattern>/bikes</url-pattern>
	</filter-mapping>
</web-app>