<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>bike-station</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<display-name>BikeStart</display-name>
		<servlet-name>BikeStart</servlet-name>
		<servlet-class>by.epam.bikerent.controller.BikeStart</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BikeStart</servlet-name>
		<url-pattern>/bikes</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<description>MySQL DB Connection Pool</description>
		<res-ref-name>jdbc/bike-station</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<listener>
		<listener-class>by.epam.bikerent.listener.SessionListener</listener-class>
	</listener>
	<!-- <filter> <filter-name>ServletSecurityFilter</filter-name> <filter-class>by.epam.bikerent.filter.ServletSecurityFilter</filter-class> 
		</filter> <filter-mapping> <filter-name>ServletSecurityFilter</filter-name> 
		<url-pattern>/bikes</url-pattern> </filter-mapping> -->
</web-app>